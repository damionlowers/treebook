<div class="page-header">
  <h1>All Statuses</h1>
  <%= link_to "Add new Status",new_status_path,class:"btn btn-success"%>
</div>
<% @statuses.each do |status|%>
  <div class="status">
      <strong><%= status.user.fullname %></strong>
      
      <%=  %>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at,include_seconds: true)+" ago",status%> |
        <span class="admin">
          <%= link_to "Edit",edit_status_path(status) %> |
          <%= link_to "Delete",status ,method: :delete,data: {confirm:"Are you sure that you want to delete status: \n"+"==> "+status.content} %>
        </span>
      </div>
  </div>
<% end %>